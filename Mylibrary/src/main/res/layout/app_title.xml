<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titleContent"
    android:layout_width="match_parent"
    android:background="@color/colorBlack0b"
    android:layout_height="@dimen/actionBarSize">

    <LinearLayout
        android:id="@+id/titleLeftBorder"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:background="@color/colorBlack0b"
        android:paddingRight="@dimen/marginRight">

        <ImageView
            android:id="@+id/titleLeft"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/selector_back"
            android:background="@color/colorTransparent"
            android:backgroundTint="@color/colorTransparent"
            android:clickable="true"
            android:paddingLeft="40px"
            android:visibility="gone" />

        <TextView
            android:id="@+id/titleLeftLabel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/selector_white_text"
            android:textSize="36px"
            android:gravity="center" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/titleNameBorder"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/actionBarSize"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="visible">

        <TextView
            android:id="@+id/titleName"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/actionBarSize"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textTitleSize"
            android:visibility="visible" />
    </FrameLayout>

    <TextView
        android:id="@+id/titleRight"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingLeft="@dimen/marginLeft"
        android:paddingRight="@dimen/marginRight"
        android:textColor="@color/selector_white_text"
        android:visibility="visible" />
</RelativeLayout>